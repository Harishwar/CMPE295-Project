<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="cmpe.alpha.fitwhiz.controllers.ProfileFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/profile_name_text"
        android:id="@+id/profile_name_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/profile_age_text"
        android:id="@+id/profile_age_text"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/profile_name_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/profile_gender_text"
        android:id="@+id/profile_gender_text"
        android:layout_below="@+id/profile_age_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />
</RelativeLayout>
